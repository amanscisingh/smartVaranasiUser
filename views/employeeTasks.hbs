<script>
    let statusValue = document.getElementsByClassName('taskStatus');
    
    for (let i = 0; i < statusValue.length; i++) {
        if (statusValue[i].innerText === 'Completed') {
            statusValue[i].style.backgroundColor = '#82ff81';
            statusValue[i].style.padding = '7px'
        } else {
            statusValue[i].style.backgroundColor = '#ff4f4f';
            statusValue[i].style.padding = '7px'
        }
    }
</script>